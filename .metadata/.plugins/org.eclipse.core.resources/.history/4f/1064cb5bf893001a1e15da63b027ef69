package com.springboot.app.products.service;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;

import com.springboot.app.products.models.Model;

public interface GenericService<T extends Model> {

	abstract T save(T t) throws ResourceNotFoundException;

	abstract void saveAll(List<T> t);

	abstract Boolean delete(T t);

	abstract Boolean delete(Long id);

	abstract Boolean deleteAll(List<T> listT);

	abstract T findById(Long id);

	abstract List<T> findAll();

	abstract Page<T> findAll(Pageable pageable);
}
