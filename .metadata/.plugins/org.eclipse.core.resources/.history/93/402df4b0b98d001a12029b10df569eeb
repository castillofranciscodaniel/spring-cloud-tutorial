package com.springboot.app.items.clients;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;

import com.springboot.app.items.models.Item;

@FeignClient(name = "products-service", url = "${service.product.url}")
public interface ProductClientRest {

	@GetMapping(name = "list")
	List<Item> findAll();

	@GetMapping(params = "find=ByProductId")
	Item findByProductId(Long productId);

	@GetMapping
	Item findByProductIdAndAmount(Long productId, Integer amount);
}
